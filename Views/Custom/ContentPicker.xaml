<?xml version="1.0" encoding="utf-8" ?>
<tk:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          x:Class="InFeminine_Admin.Views.ContentPicker"
          xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
          Color="Transparent">

    <Border
        StrokeShape="RoundRectangle 15"
        Padding="15"
        BackgroundColor="White">
        
        <VerticalStackLayout>

            <Label
                Text="O que deseja adicionar à página?"
                TextColor="Black"
                FontSize="16"
                FontAttributes="Bold"
                Margin="0,0,0,20"/>

            <RadioButton Content="Texto" TextColor="Black" FontSize="14" CheckedChanged="RadioButton_CheckedChanged"/>

            <RadioButton Content="Imagem" TextColor="Black" FontSize="14" CheckedChanged="RadioButton_CheckedChanged"/>

            <RadioButton Content="Carrossel" TextColor="Black" FontSize="14" CheckedChanged="RadioButton_CheckedChanged"/>

            <Button
                Text="Prosseguir"
                TextColor="Black"
                FontSize="14"
                Margin="0,20,0,0"
                BackgroundColor="LightCoral"
                Clicked="Button_Clicked"/>

        </VerticalStackLayout>
    </Border>

</tk:Popup>