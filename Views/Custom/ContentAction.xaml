<?xml version="1.0" encoding="utf-8" ?>
<tk:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
          xmlns:tk="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
          x:Class="InFeminine_Admin.Views.Custom.ContentAction"
          Color="Transparent">

    <Border
        StrokeShape="RoundRectangle 15"
        Padding="15"
        BackgroundColor="White">

        <VerticalStackLayout>

            <Label
                Text="O que deseja fazer?"
                TextColor="Black"
                FontSize="16"
                FontAttributes="Bold"
                Margin="0,0,0,20"/>

            <Button
                x:Name="Edit"
                Text="Editar"
                TextColor="Black"
                FontSize="14"
                Margin="0,20,0,0"
                BackgroundColor="LightCoral"
                FontAttributes="Bold"
                Clicked="Edit_Clicked"/>

            <Button
                x:Name="Delete"
                Text="Excluir"
                TextColor="Black"
                FontSize="14"
                Margin="0,20,0,0"
                BackgroundColor="Red"
                FontAttributes="Bold"
                Clicked="Delete_Clicked"/>

        </VerticalStackLayout>
    </Border>

</tk:Popup>